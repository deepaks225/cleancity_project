<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Profile</title>
  <link rel="stylesheet" href="/navbar.css">
  <link rel="stylesheet" href="/user.css">
  <link rel="stylesheet" href="/hamburger.css">
</head>
<body>
  <header>
    <h1>Update profile details</h1>

    <div class="hamburger" >
        <span></span>
        <span></span>
        <span></span>
    </div>

    <% if (locals.user) { %>
        <nav id="main-nav">
            <a href="/home">Home</a>
            <a href="/capture">Report</a>
            <a href="/profile">Profile</a>
            <a href="/notifications">Notifications</a>
            <a href="/drives">Drives</a>
            <a href="/logout">LogOut</a>
        </nav>
    <% } else { %>
        <nav id="main-nav">
            <a href="/">Home</a>
            <a href="/signin">SignIn</a>
            <a href="/signup">SignUp</a>
        </nav>
    <% } %>
</header>

  <main>
    <div class="profile-update-container">
      <div class="profile-update">
        <h2>Update Your Information</h2>
        <form action="/update" method="POST" enctype="multipart/form-data">
          <label for="profilePicture">Profile Picture:</label>
          <input type="file" id="profilePicture" name="profilePicture" accept="image/png, image/jpeg">

          <label for="firstname">First Name:</label>
          <input type="text" id="firstname" name="firstname" value="<%= users.firstname %>" required>

          <label for="lastname">Last Name:</label>
          <input type="text" id="lastname" name="lastname" value="<%= users.lastname %>" required>

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" value="<%= users.email %>" required>

          <label for="date">Date:</label>
          <input type="date" id="date" name="date" value="<%= users.date %>" required>

          <button type="submit">Update</button>
        </form>
      </div>
    </div>
  </main>
  <script>
    const hamburger = document.querySelector('.hamburger');
        const nav = document.getElementById('main-nav');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            nav.classList.toggle('active');
        });
  </script>
  
</body>

</html>
