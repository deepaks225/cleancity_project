<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assigned Tasks - Collector</title>
    <link rel="stylesheet" href="/navbar.css">
    <link rel="stylesheet" href="/collector.css">
    <link rel="stylesheet" href="/hamburger.css">
</head>
<body>
    <header>
        <h1>CleanCity</h1>

        <div class="hamburger" >
            <span></span>
            <span></span>
            <span></span>
        </div>

        <% if (locals.user) { %>
            <nav id="main-nav">
                <a href="/collector/profile">Profile</a>
                <a href="/collector/task">Tasks</a>
                <a href="/collector/logout">Logout</a>
            </nav>
            <% } else { %>
                <nav id="main-nav">
                    <a href="/">Home</a>
                    <a href="/signin">Signin</a>
                    <a href="/signup">Signup</a>
                </nav>
                <% } %>
    </header>

    <div class="task-container">
        <% if (locals.tasks && locals.tasks.length> 0) { %>
            <% locals.tasks.forEach(task=> { %>
                <div class="task-item">
                    <div class="task-details">
                        <p><strong>Task:</strong>
                            <%= task.task %>
                        </p>
                        <p><strong>Date:</strong>
                            <%= task.date %>
                        </p>
                        <p><strong>Status:</strong>
                            <%= task.status %>
                        </p>
                        <p><strong>Address:</strong>
                            <%= task.address %>
                        </p>
                        <p class="coordinates">
                            <span>Latitude:</span>
                            <%= task.location[0].latitude %>,
                                <span>Longitude:</span>
                                <%= task.location[0].longitude %>
                        </p>
                        <div class="task-buttons">
                            <a href="https://www.google.com/maps?q=<%= task.location[0].latitude %>,<%= task.location[0].longitude %>"
                                target="_blank">
                                Open in Google Maps
                            </a>
                            <a href="/collector/update/<%= task._id %>">Update Status</a>
                        </div>
                    </div>
                    <div class="task-image">
                        <img src="<%= task.imageURL %>" alt="Task Image">
                    </div>
                </div>
                <hr />
                <% }) %>
                    <% } else { %>
                        <p class="no-tasks">No tasks assigned.</p>
                        <% } %>
    </div>

    <script>
        const hamburger = document.querySelector('.hamburger');
        const nav = document.getElementById('main-nav');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            nav.classList.toggle('active');
        });
    </script>
</body>
</html>