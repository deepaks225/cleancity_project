<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/navbar.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>CleanCity</h1>
        <% if (locals.user) { %>
            <nav>
                <a href="/admin">Home</a>
                <a href="/admin/collector">Collectors</a>
                <a href="/admin/create">Create</a>
                <a href="/admin/user">Users</a>
                <a href="/admin/complain">Complains</a>
                <a href="/admin/task">Tasks</a>
                <a href="/admin/drives">Drives</a>
                <a href="/admin/logout">Logout</a>
            </nav>
        <% } else { %>
            <nav>
                <a href="/">Home</a>
                <a href="/signin">Signin</a>
                <a href="/signup">Signup</a>
            </nav>
        <% } %>
    </header>

    <div class="container">
        <% if (locals.user) { %>
            <% collectors.forEach(collector => { %>
                <div class="collector-card">
                    <span class="collector-name">Name: <%= collector.firstname %></span>
                    <a href="/admin/assign/<%= collector._id %>" class="assign-btn">
                        Assign a Task
                    </a>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>