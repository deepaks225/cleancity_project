<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drives</title>
  <link rel="stylesheet" href="/navbar.css">
  <link rel="stylesheet" href="/admin.css">
  <link rel="stylesheet" href="/hamburger.css">
</head>

<body>
  <header>
    <h1>CleanCity</h1>
    <div class="hamburger" >
      <span></span>
      <span></span>
      <span></span>
    </div>

    <% if (locals.user) { %>
      <nav id="main-nav">
        <a href="/admin">Home</a>
        <a href="/admin/collector">Collectors</a>
        <a href="/admin/create">Create</a>
        <a href="/admin/user">Users</a>
        <a href="/admin/complain">Complains</a>
        <a href="/admin/task">Tasks</a>
        <a href="/admin/drives">Drives</a>
        <a href="/admin/logout">Logout</a>
      </nav>
    <% } else { %>
      <nav id="main-nav">
        <a href="/">Home</a>
        <a href="/signin">Signin</a>
        <a href="/signup">Signup</a>
      </nav>
    <% } %>
  </header>

  <div class="container">
    <div class="form-container">
      <form action="/admin/drives" method="post">
        <label for="location">Location:</label>
        <input type="text" name="location" id="location">
        <label for="date">Date:</label>
        <input type="date" name="date" id="date">
        <label for="number">Number:</label>
        <input type="number" name="number" id="number">
        <button type="submit">Submit</button>
      </form>
    </div>

    <div class="container">
      <div class="drives-list">
        <% drives.forEach(drive => { %>
          <div class="drive-item">
            <h3><%= drive.location %></h3>
            <p>Date: <%= new Date(drive.date).toLocaleDateString() %></p>
            <p>Number of Volunteers Required: <%= drive.number %></p>
            <p>Applied Participants: <%= drive.appliedUsers.length %></p>
            <button onclick="viewParticipants('<%= drive._id %>')">View Participants</button>

            <% if (locals.user && locals.user.role === 'admin') { %>
              <form action="/admin/drives/delete/<%= drive._id %>" method="POST"
                onsubmit="return confirm('Are you sure you want to delete this drive?');">
                <button type="submit" class="delete-btn">Delete Drive</button>
              </form>
            <% } %>
          </div>
        <% }) %>
      </div>
    </div>

    <div id="participantModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Participants</h2>
        <div id="participantList"></div>
      </div>
    </div>

    <script>
      const modal = document.getElementById('participantModal');
      const span = document.getElementsByClassName('close')[0];
      const participantList = document.getElementById('participantList');

      span.onclick = function () {
        modal.style.display = 'none';
      }

      window.onclick = function (event) {
        if (event.target == modal) {
          modal.style.display = 'none';
        }
      }

      async function viewParticipants(driveId) {
        try {
          const response = await fetch(`/admin/drives/${driveId}/participants`);
          const participants = await response.json();
          participantList.innerHTML = participants.map(p => `
            <p>${p.firstname} ${p.lastname} - ${p.email}</p>
          `).join('');
          modal.style.display = 'block';
        } catch (error) {
          console.error('Error fetching participants:', error);
          alert('An error occurred while fetching participants');
        }
      }

      const hamburger = document.querySelector('.hamburger');
        const nav = document.getElementById('main-nav');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            nav.classList.toggle('active');
        });
    </script>
</body>

</html>
