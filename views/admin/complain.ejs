<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complains - CleanCity</title>
    <link rel="stylesheet" href="/navbar.css">
    <link rel="stylesheet" href="/admin.css">
    <link rel="stylesheet" href="/hamburger.css">
</head>
<body>
    <header>
        <h1>CleanCity</h1>

        <!-- Hamburger button -->
        <div class="hamburger" >
            <span></span>
            <span></span>
            <span></span>
        </div>

        <% if (locals.user) { %>
            <nav id="main-nav">
                <a href="/admin">Home</a>
                <a href="/admin/collector">Collectors</a>
                <a href="/admin/create">Create</a>
                <a href="/admin/user">Users</a>
                <a href="/admin/complain">Complains</a>
                <a href="/admin/task">Tasks</a>
                <a href="/admin/drives">Drives</a>
                <a href="/admin/logout">Logout</a>
            </nav>
        <% } else { %>
            <nav id="main-nav">
                <a href="/">Home</a>
                <a href="/signin">Signin</a>
                <a href="/signup">Signup</a>
            </nav>
        <% } %>
    </header>

    <div class="container">
        <div class="cards-wrapper">
            <% complains.forEach(element=> { %>
                <div class="complain-card">
                    <p class="complain-text">
                        <%= element.complain %>
                    </p>
                    <p class="complain-date">Reported on <%= new Date(element.date).toLocaleString('en-US', {
                            year: 'numeric' , month: 'long' , day: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                    </p>
                    <img class="complain-image" src="<%= element.imageURL %>" alt="Litter Image">
                </div>
            <% }) %>
        </div>
    </div>

    <script>
        const hamburger = document.querySelector('.hamburger');
        const nav = document.getElementById('main-nav');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            nav.classList.toggle('active');
        });
    </script>
</body>
</html>
